<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	
<!-- 1. 게시물 등록 -->


<insert id="insertBoard" parameterType="HashMap" >
	INSERT INTO tbl_board(bno,title,content,writer)
	VALUES(seq_board.NEXTVAL,#{title},#{content},#{writer}) 
</insert>

<!-- 2.게시물 수정 -->


<update id="updateBoard" parameterType="HashMap" >
	UPDATE tbl_board SET
		title = #{title},
		content = #{content},
		writer = #{writer}
	WHERE bno = #{bno} 
</update>

<!-- 4. 게시물 조회 -->


<select id="selectBoard" resultType="board.BoardDTO">
	SELECT * FROM tbl_board 
</select>

<!-- 3. 게시물 삭제 -->


<delete id="deleteBoard" parameterType="HashMap" >
	DELETE tbl_board
	WHERE bno = #{bno}
 </delete>

<!-- 조회수 증가 -->


<update id="viewCnt">
	UPDATE tbl_board
	SET viewcnt = viewcnt + 1
	WHERE bno = #{bno}
</update>

<!-- 7. 상세게시글 -->


<select id="viewBoard" resultType="board.BoardDTO">
	SELECT * FROM tbl_board
	WHERE bno = #{bno} 
</select>

<!-- 5.검색 -->
<select id="searchBoard" resultType="board.BoardDTO">
	SELECT * FROM tbl_board
	WHERE title LIKE '%'||#{title}||'%' OR
	content  LIKE '%'||#{content}||'%'

</select>

<!-- 6.정렬 -->
<select id="boardSortBoard" resultType="board.BoardDTO">
	SELECT * FROM tbl_board
	ORDER BY viewcnt DESC
</select>

</mapper>
		


